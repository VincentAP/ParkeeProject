<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearAvailableCurrenciesItemWrapper"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:paddingStart="10dp"
    android:paddingEnd="0dp"
    android:gravity="center_vertical"
    android:background="@drawable/selected_currency_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageFlag"
        android:layout_width="50dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/flag_bg"
        android:layout_marginEnd="10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/transferWiseWhite"
        android:fontFamily="@font/tw_averta_semibold"
        android:layout_marginEnd="10dp"
        tools:text="GBP"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/transferWiseGrey61"
        android:fontFamily="@font/tw_averta_semibold"
        tools:text="British pound"/>
</LinearLayout>