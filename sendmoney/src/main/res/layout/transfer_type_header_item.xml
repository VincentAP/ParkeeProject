<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearTransferTypeHeaderItemWrapper"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="40dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearHorizontalWrapper"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textTransferTypeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="17sp"
            android:textColor="@color/transferWiseAccountBlue"
            android:fontFamily="@font/tw_averta_semibold"
            tools:text="Balance transfer"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageHelpTransferType"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/ic_help_blue"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textTransferTypeFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/transferWiseGrey61"
            android:fontFamily="@font/tw_averta_bold"
            android:text="@string/transfer_type_fee"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="@color/transferWiseWhiteGrey"/>
</LinearLayout>