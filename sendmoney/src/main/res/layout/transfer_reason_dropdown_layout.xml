<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeTransferReasonDropdownLayoutWrapper"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@drawable/edit_text_border_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textSpinnerCurrentSelectedReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageArrow"
        android:fontFamily="@font/tw_averta_semibold"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textColor="@color/transferWiseToolbarColor"
        android:textSize="15sp"
        android:text="@string/select_a_reason"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:contentDescription="@string/null_"
        app:srcCompat="@drawable/ic_arrow_down_account_blue" />
</RelativeLayout>