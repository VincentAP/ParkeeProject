<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frameTransferReviewWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transferWiseWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transferWiseWhite">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ScrollView
        android:id="@+id/scrollTransferReviewWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@color/transferWiseWhite">

        <RelativeLayout
            android:id="@+id/relativeTransferReviewWrapper"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textFragmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/tw_averta_bold"
                android:textColor="@color/transferWiseAccountBlue"
                android:text="@string/review_details_of_your_transfer"/>

            <RelativeLayout
                android:id="@+id/relativeTransferDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/textFragmentTitle">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textTD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseGrey61"
                    android:fontFamily="@font/tw_averta_bold"
                    android:text="@string/transfer_details"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textTD"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseBlue"
                    android:fontFamily="@font/tw_averta_semibold"
                    android:text="@string/edit_review"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeTransferDetails2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/relativeTransferDetails">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textYouSend3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseGrey61"
                    android:fontFamily="@font/tw_averta_bold"
                    android:text="@string/you_send"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textTotalSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textYouSend3"
                    android:textSize="20sp"
                    android:textColor="@color/transferWiseAccountBlue"
                    android:fontFamily="@font/tw_averta_bold"
                    tools:text="1,000 GBP"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeTransferDetails3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/relativeTransferDetails2">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textTotalFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseGrey61"
                    android:fontFamily="@font/tw_averta_bold"
                    android:text="@string/total_fees_included"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textTotalFeeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textTotalFee"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseAccountBlue"
                    android:fontFamily="@font/tw_averta_regular"
                    tools:text="12.93 GBP"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeTransferDetails4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/relativeTransferDetails3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textAmountConvert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseGrey61"
                    android:fontFamily="@font/tw_averta_bold"
                    android:text="@string/amount_we_ll_convert"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textConvertValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textAmountConvert"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseAccountBlue"
                    android:fontFamily="@font/tw_averta_regular"
                    tools:text="987.07 GBP"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeTransferDetails5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/relativeTransferDetails4">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textGuaranteedRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseGrey61"
                    android:fontFamily="@font/tw_averta_bold"
                    android:text="@string/guaranteed_rate_24_hours"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textGuaranteedRateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textGuaranteedRate"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseAccountBlue"
                    android:fontFamily="@font/tw_averta_regular"
                    tools:text="8.74280"/>
            </RelativeLayout>

            <include
                android:id="@+id/layoutTooltip"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_width="230dp"
                android:layout_below="@+id/relativeTransferDetails5"
                layout="@layout/custom_tooltip_layout"/>

            <RelativeLayout
                android:id="@+id/relativeTransferDetails6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/relativeTransferDetails5">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textPersonGets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseGrey61"
                    android:fontFamily="@font/tw_averta_bold"
                    android:text="@string/person_gets"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textPersonGetsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textPersonGets"
                    android:textSize="20sp"
                    android:textColor="@color/transferWiseAccountBlue"
                    android:fontFamily="@font/tw_averta_bold"
                    tools:text="8,639.76 CNY" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeTransferDetails7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/relativeTransferDetails6">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textShouldArrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseGrey61"
                    android:fontFamily="@font/tw_averta_bold"
                    android:text="@string/should_arrive"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textShouldArriveValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textShouldArrive"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseAccountBlue"
                    android:fontFamily="@font/tw_averta_semibold"
                    tools:text="by September 16th"/>
            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:background="@color/transferWiseWhiteGrey"
                android:layout_below="@+id/relativeTransferDetails7"/>

            <RelativeLayout
                android:id="@+id/relativeRecipientDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/view1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textRD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseGrey61"
                    android:fontFamily="@font/tw_averta_bold"
                    android:text="@string/recipient_details"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textRD"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseBlue"
                    android:fontFamily="@font/tw_averta_semibold"
                    android:text="@string/change"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeTransferDetails8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/relativeRecipientDetails">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseGrey61"
                    android:fontFamily="@font/tw_averta_bold"
                    android:text="@string/name"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textNameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textName"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseAccountBlue"
                    android:fontFamily="@font/tw_averta_semibold"
                    tools:text="daniel hu" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeTransferDetails9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/relativeTransferDetails8">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseGrey61"
                    android:fontFamily="@font/tw_averta_bold"
                    android:text="@string/email"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textEmailValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textEmail"
                    android:textSize="17sp"
                    android:textColor="@color/transferWiseAccountBlue"
                    android:fontFamily="@font/tw_averta_semibold"
                    tools:text="email@gmail.com" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textExplanationCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/transferWiseGrey61"
                android:fontFamily="@font/tw_averta_bold"
                android:text="@string/alipay_id_chinese_mobile_number_or_email"
                android:layout_below="@+id/relativeTransferDetails9"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/transferWiseAccountBlue"
                android:fontFamily="@font/tw_averta_semibold"
                tools:text="email@gmail.com"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/textExplanationCard"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textReferenceFor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/transferWiseGrey61"
                android:fontFamily="@font/tw_averta_bold"
                android:text="@string/references_for"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/textAccountNumber"/>

            <include
                android:id="@+id/layoutReferences"
                layout="@layout/reference_layout_item"
                android:layout_below="@+id/textReferenceFor"
                android:layout_height="52dp"
                android:layout_width="match_parent"/>

            <RelativeLayout
                android:id="@+id/relativeButtonWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:layout_marginTop="25dp"
                android:background="@color/transferWiseGreen"
                android:layout_below="@+id/layoutReferences">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonContinue"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:textSize="17sp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:textColor="@color/transferWiseWhite"
                    android:text="@string/confirm_and_continue"/>

                <ProgressBar
                    android:id="@+id/progressIndicator"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:indeterminateDrawable="@drawable/custom_progress_bar"
                    android:indeterminateDuration="500"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>