<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearCreateRecipientItemWrapper"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingTop="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:paddingBottom="23dp"
    android:background="@drawable/create_recipient_bg"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textRecipientInitial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:fontFamily="@font/tw_averta_bold"
        android:textColor="@color/transferWiseBlue"
        android:layout_marginBottom="15dp"
        tools:text="VA"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:fontFamily="@font/tw_averta_bold"
        android:textColor="@color/transferWiseAccountBlue"
        android:layout_marginBottom="5dp"
        tools:text="Myself"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tw_averta_bold"
        android:textColor="@color/transferWiseGrey"
        android:textSize="17sp"
        tools:text="CNY account ending with .com"
        android:visibility="gone"
        tools:visibility="visible"/>
</LinearLayout>