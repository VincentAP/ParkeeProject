<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearTransferHistoryTotalItemWrapper"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginBottom="50dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textCurrentChosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textSize="18sp"
        android:fontFamily="@font/tw_averta_bold"
        android:textColor="@color/transferWiseBlackBlue"
        tools:text="1-6"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textOf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/tw_averta_regular"
        android:layout_marginEnd="5dp"
        android:text="@string/of"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/tw_averta_bold"
        android:textColor="@color/transferWiseBlackBlue"
        tools:text="6"/>
</LinearLayout>