<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearAvailableBalance"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAvailableBalanceWrapper"
        android:layout_width="165dp"
        android:layout_height="175dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/linearAvailableBalanceWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="0dp"
            android:paddingTop="25dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageCountryFlag"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/shimmer_image"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tw_averta_bold"
                android:textColor="@color/transferWiseBlackBlue"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                tools:text="4,000,000"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textCurrencyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tw_averta_regular"
                android:textColor="@color/transferWiseBlackBlue"
                android:textSize="19sp"
                android:layout_marginTop="5dp"
                tools:text="AUD balance"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/viewRightMargin"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</LinearLayout>