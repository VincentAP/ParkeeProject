<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearEmptyHistoryItemWrapper"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:paddingTop="25dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_empty_history"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tw_averta_regular"
        android:textColor="@color/transferWiseGrey61"
        android:layout_marginTop="10dp"
        android:text="@string/empty_history_message"/>
</LinearLayout>