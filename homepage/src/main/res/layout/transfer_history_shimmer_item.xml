            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageArrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/shimmer_image"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"/>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerRecipientDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/shimmerImage">

            <LinearLayout
                android:id="@+id/linearLeftTransferDetailWrapper"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textRecipientName"
                    android:layout_width="130dp"
                    android:layout_height="22dp"
                    android:background="@drawable/shimmer_short_text"
                    android:layout_marginBottom="3dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textTransferStatus"
                    android:layout_width="90dp"
                    android:layout_height="22dp"
                    android:background="@drawable/shimmer_short_text"/>
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/shimmerRecipientDetail">

            <LinearLayout
                android:id="@+id/linearRightTransferDetailWrapper"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="end">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textCurrencyFrom"
                    android:layout_width="130dp"
                    android:layout_height="22dp"
                    android:layout_marginBottom="3dp"
