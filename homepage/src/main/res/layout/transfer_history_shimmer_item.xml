                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="@color/transferWiseWhiteGrey"
                android:layout_below="@+id/textHeaderShimmer"/>
        </RelativeLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

